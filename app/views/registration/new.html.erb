
 <h2 class="form-signin-heading">Sign up</h2>
<%= form_tag(user_registration_path,:method => 'post') %>
<%= devise_error_messages! %>


<td><%=text_field_tag "user[username]",@user.username ,:class => 'form-control', "placeholder"=>"username" %></td>

<td><%=email_field_tag "user[email]",@user.email,:class => 'form-control', "placeholder"=>"email"  %></td>

<td><%=password_field_tag "user[password]",@user.password,:class => 'form-control', "placeholder"=>"password"  %></td>

<td><%=password_field_tag "user[password_confirmation]",@user.password_confirmation ,:class => 'form-control', "placeholder"=>"password retype" %></td>

<td><%=text_field_tag "contact[mobile]" ,@contact.mobile,:class => 'form-control', "placeholder"=>"mobile"  %></td>

<td><%=text_area_tag "contact[address]" ,@contact.address ,:rows => 10, :cols => 25 ,:class => 'form-control', "placeholder"=>"address" %></td>


</br>
<div>
	<%=  submit_tag nil, :class => "form_submit" ,:class=>"btn btn-lg btn-primary btn-block"%>
</div>
</br>
<div class="pull-right">
	<%= render "devise/shared/links" %>
</div>

