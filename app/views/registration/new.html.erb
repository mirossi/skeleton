<%=text_field_tag "user[username]",@user.username ,:class => 'form-control', "placeholder"=>"username" %>



<%=password_field_tag "user[password]",@user.password,:class => 'form-control', "placeholder"=>"password"  %>

<%=password_field_tag "user[password_confirmation]",@user.password_confirmation ,:class => 'form-control', "placeholder"=>"password retype" %></td>


</br>
<div>
	<%=  submit_tag nil, :class => "form_submit" ,:class=>"btn btn-lg btn-primary btn-block"%>
</div>
</br>
