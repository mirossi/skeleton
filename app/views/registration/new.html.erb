

<%= form_tag(user_registration_path,:method => 'post',:class => 'form-signin') do %>
 <h2 class="form-signin-heading">Sign up</h2>


<%=text_field_tag "person[firstname]",@person.firstname ,:class => 'form-control', "placeholder"=>"firstname" %>
<%=text_field_tag "person[lastname]",@person.lastname ,:class => 'form-control', "placeholder"=>"lastname" %>
<%=text_field_tag "contact[street]",@contact.street ,:class => 'form-control', "placeholder"=>"strasse" %>
<%=text_field_tag "contact[zip]",@contact.zip ,:class => 'form-control', "placeholder"=>"postleitzahl" %>
<%=text_field_tag "contact[city]",@contact.city ,:class => 'form-control pad', "placeholder"=>"stadt" %>

<%=text_field_tag "contact[mobile]" ,@contact.mobile,:class => 'form-control', "placeholder"=>"mobile"  %>
