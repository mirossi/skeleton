

<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put ,:class => 'form-signin'}) do |f| %>
<h2>Change your password</h2>
  <%= devise_error_messages! %>
  <%= f.hidden_field :reset_password_token %>


  <%= f.password_field :password, :autofocus => true, :class => 'form-control', "placeholder"=>"password" %>

  <%= f.password_field :password_confirmation, :class => 'form-control', "placeholder"=>"password confirmation" %>
    </br>
    <div>
     <%= f.submit "Change my password",:class=>"btn btn-lg btn-primary btn-block" %>
    </div>
    </br>
    <%= render "devise/shared/links" %>

<% end %>


