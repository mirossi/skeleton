<%= form_for(@wine) do |f| %>
  <% if @wine.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@wine.errors.count, "error") %> prohibited this wine from being saved:</h2>

      <ul>
      <% @wine.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :year %><br>
    <%= f.number_field :year %>
  </div>
  <div class="field">
    <%= f.label "Land" %><br>
    <%= f.country_select :country_code,  ['CH', 'FR', 'ES', 'IT'], iso_codes: true  %>
  </div>

    <%= f.fields_for :images do |builder| %>
        <% if builder.object.picture_content_type.nil? %>
        <%= builder.file_field :picture, :class => 'file_field' %>
        <% end %>
    <% end %>



  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
