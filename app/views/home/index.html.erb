<h1>Listing contacts</h1>


<a  id="delete">Delete selected row</a>
<% columns=Contact.columns %>
<table id="contacts" cellpadding="0" cellspacing="0" border="0" class="table table-striped table-bordered" >
  <thead>
    <tr>
      <% columns.each do |col| %>
      <th><%= col.name %> </th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <% columns.each do |col| %>
        <td><%= contact.send("#{col.name}") %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>